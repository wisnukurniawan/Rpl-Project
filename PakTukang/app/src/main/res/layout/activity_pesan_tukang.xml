<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wisnu.paktukang.PesanTukang">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ic_person"
        android:src="@mipmap/ic_perm_identity_black_24dp"/>
    
    <EditText
        android:layout_width="match_parent"
        android:hint="nama"
        android:id="@+id/nama_p"
        android:inputType="text"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/ic_person"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ic_phone"
        android:layout_marginTop="16dp"
        android:layout_below="@id/ic_person"
        android:src="@mipmap/ic_phone_black_24dp"/>

    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:hint="nomer hp"
        android:layout_marginTop="16dp"
        android:id="@+id/nomer_hp_p"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/nama_p"
        android:layout_toRightOf="@id/ic_phone"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/ic_email"
        android:layout_below="@id/ic_phone"
        android:src="@mipmap/ic_mail_outline_black_24dp"/>

    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:id="@+id/email_p"
        android:hint="email"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/nomer_hp_p"
        android:layout_toRightOf="@id/ic_email"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/ic_alamat"
        android:layout_below="@id/ic_email"
        android:src="@mipmap/ic_place_black_24dp"/>

    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:hint="alamat lengkap"
        android:id="@+id/alamat_p"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/email_p"
        android:layout_toRightOf="@id/ic_alamat"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:id="@+id/ic_pesan"
        android:layout_below="@id/ic_alamat"
        android:src="@mipmap/ic_message_black_24dp"/>

    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:hint="pesan kerusakan"
        android:id="@+id/pesan_p"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/alamat_p"
        android:layout_toRightOf="@id/ic_pesan"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="order"
        android:id="@+id/order_p"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pesan_p"
        />

</RelativeLayout>
